<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tejasvi7.myapplication.regActivity"
    android:background="@android:color/background_light">

    <TextView
        android:text="Register below"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textSize="20sp"
        android:id="@+id/uname1"
        android:focusable="true"
        android:textColorHighlight="#ffffffff"
        android:textColorHint="#90000000"
        android:layout_marginTop="10dp"

        android:textColorLink="@android:color/holo_blue_dark" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:id="@+id/password1"
        android:textColorHighlight="#ffaf35e6"
        android:textColorHint="#90000000"

        android:textColorLink="@android:color/holo_blue_dark" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:id="@+id/cPassword"
        android:textColorHighlight="#ffaf35e6"
        android:textColorHint="#90000000"

        android:textColorLink="@android:color/holo_blue_dark" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Email id"
        android:textSize="20sp"
        android:id="@+id/email"
        android:textColorHighlight="#ffaf35e6"
        android:textColorHint="#90000000"

        android:textColorLink="@android:color/holo_blue_dark" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Gender"
        android:textSize="20sp"
        android:id="@+id/gender"
        android:textColorHighlight="#ffaf35e6"
        android:textColorHint="#ff000000"
        android:layout_marginTop="10dp"

        />
<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/gender"
    android:id="@+id/myRadioGroup"
   >

    <RadioButton
        android:text="Male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/radioButton"
        android:textColorLink="@android:color/holo_blue_dark" />

    <RadioButton
        android:text="Female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton2"
        android:textColorLink="@android:color/holo_blue_dark" />
</RadioGroup>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Mobile Number"
        android:textSize="20sp"
        android:id="@+id/mNumber"
        android:textColorHighlight="#ffaf35e6"
        android:textColorHint="#90000000"

        android:textColorLink="@android:color/holo_blue_dark" />

    <Button
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="submit"
        android:id="@+id/button"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />


</LinearLayout>
